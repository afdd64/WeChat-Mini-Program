.container {
  padding: 30rpx;
}

.order-nav {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  border-bottom: 4rpx solid transparent;
}

.nav-item.active {
  color: #e4393c;
  border-color: #e4393c;
}

.menu-list {
  background: #fff;
  border-radius: 16rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #999;
  font-size: 40rpx;
}