.profile-container {
  padding: 20px;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 10px;
}

.nickname {
  font-size: 18px;
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.order-tab {
  font-size: 16px;
}

.menu-list {
  border-top: 1px solid #eee;
}

.menu-item {
  display: block;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
  font-size: 16px;
}